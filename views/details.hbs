<div class="activity-details">

    <h1>{{this.title}}</h1>
    <hr>
    <img src="{{this.image}}" alt="image of an activity"/>
    <p>{{this.description}}</p>
    <p>{{this.author.username}}</p>

</div>

<button type="submit">
    <a href="/activity/{{this.id}}/edit">Edit this activity</a>
</button>

<button type="submit">Delete this activity</button>

<button type="submit">
    <a href="/activities">Take me back</a>
</button>