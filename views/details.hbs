<section class="display">
  <div class="activity-details">

    <h1 class="h1-details">{{activityFromDB.title}}</h1>

    <div id="box-details" class="box">
      <div class="description">
        <h3 class="labels">Description</h3>
        <p class="card">{{activityFromDB.description}}</p>
      </div>

      <div class="author">
        <h3 class="labels">Creator</h3>
        <p class="card-author">The author of this activity is {{activityFromDB.author.username}}</p>
      </div>

    </div>

  </div>

  {{#if authorIsUser}}
    {{#if currentUrl}}
      <button type="submit">
        <a href="/activity/{{activityFromDB._id}}/edit">Edit this activity</a>
      </button>

      <form action="/activities/{{activityFromDB.id}}/delete" method="POST">
        <button type="submit">Delete activity</button>
      </form>
    {{/if}}

  {{/if}}
  
  <div class="buttons-bottom">
    <form action="/activities/{{activityFromDB.id}}/details" method="post">
    <button type="submit">Log activity</button>
  </form>

  <button type="submit">
    <a href="javascript:history.back()">Take me back</a>
  </button>

  </div>
  

</section>