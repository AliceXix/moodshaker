<div class="activity-details">

    <h1>{{this.data.title}}</h1>
    <hr>
    <img src="{{this.data.image}}" alt="image of an activity"/>
    <p>{{this.data.description}}</p>
    <p>{{this.data.author.username}}</p>

</div>

<button type="submit">
    <a href="/activity/{{this.id}}/edit">Edit this activity</a>
</button>

<button type="submit">Delete this activity</button>

<button type="submit">
    <a href="/mood-giver?mood={{this.moodQuery}}&energyLvl={{this.energyQuery}}">Take me back</a>
</button>
