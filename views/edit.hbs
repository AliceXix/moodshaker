<section>

    <div>
        <h1>Edit your activity</h1>

    </div>

<div class="box">
            <h2>Better day by day</h2>
<form class="user-input" action="/activity/{{activityDetailsFromDB.id}}/edit" method="post">
    <div >
        <label ><h6>Title</h6> <br>
            <input type="text" name="title" value="{{activityDetailsFromDB.title}}" />
        </label>
    </div>

    <label ><h6>Mood</h6> <br>
        <select name="mood" multiple>
        
            <option value="happy">happy</option>
            <option value="procrastinating">procrastinating</option>
            <option value="restless">restless</option>
            <option value="sad">sad</option>
            <option value="creative">creative</option>
            <option value="angry">angry</option>

        </select>
    </label>


    <h6>Energy Level</h6> <br>
        <select name="energyLvl">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

    <h6>Description</h6> <br>
        <textarea type="textarea" name="description"  rows="4" cols="30">{{activityDetailsFromDB.description}}</textarea>



</form>

</div>

<div class="button-together">
        <button class="button" type="submit">Edit</button>
<button class="button" type="submit">
    <a href="javascript:history.back()">Take me back</a>
</button>
</div>

</section>
