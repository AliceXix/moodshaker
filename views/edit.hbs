<section>

    <div>
        <h1>Edit your activity</h1>
        <h2>Better day by day</h2>
    </div>

<div>
<form action="/activity/{{activityDetailsFromDB.id}}/edit" method="post">
    <div >
        <label >Title <br>
            <input type="text" name="title" value="{{activityDetailsFromDB.title}}" />
        </label>
    </div>

    <label >Mood <br>
        <select name="mood" multiple>
        
            <option value="happy">happy</option>
            <option value="procrastinating">procrastinating</option>
            <option value="restless">restless</option>
            <option value="sad">sad</option>
            <option value="creative">creative</option>
            <option value="angry">angry</option>

        </select>
    </label>


    <label >Energy Level <br>
        <select name="energyLvl">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label>

    <label >Description <br>
        <input type="text" name="description" value="{{activityDetailsFromDB.description}}"/>
    </label>
   

    <button type="submit">Edit</button>


</form>

</div>

<button type="submit">
    <a href="javascript:history.back()">Take me back</a>
</button>

</section>
