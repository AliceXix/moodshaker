<section class="display">

    <div class="titles">
        <h1>Edit your activity</h1>
        <h2>Better day by day</h2>
    </div>

<div class="form-register">
<form class="form-create" action="/activity/{{activityDetailsFromDB.id}}/edit" method="post">
    <div >
        <label>Title
            <input class="title-select" type="text" name="title" value="{{activityDetailsFromDB.title}}" />
        </label>
    </div>

    <label>Mood <br>
        <select class="mood-select" name="mood" multiple>
        
            <option value="happy">happy</option>
            <option value="procrastinating">procrastinating</option>
            <option value="restless">restless</option>
            <option value="sad">sad</option>
            <option value="creative">creative</option>
            <option value="angry">angry</option>

        </select>
    </label>


    <label>Energy Level <br>
        <select class="energy-select" name="energyLvl">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label>

    <label>Description <br>
        <input class="description-select" type="text" name="description" value="{{activityDetailsFromDB.description}}"/>
    </label>
   

    <button type="submit">Create new activity!</button>


</form>

</div>

<button class="discover-button" type="submit">
    <a href="javascript:history.back()">Take me back</a>
</button>

</section>
