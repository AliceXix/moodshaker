<section class="display2">
  <h1 class="titre-question">Results tailored to your mood...</h1>

  <div class="result-content">

    {{#if data}}
      {{#each data}}
        <div class="cards">
          <h3 class="details-title">{{this.title}}</h3>
          <a class="details-link" href="/activities/{{this.id}}/details">More details</a>
            {{!-- {{#each this.mood}}
            <p class="results">{{this}}</p> 
            {{/each}}        --}}
        </div>
      {{/each}}

    {{else}}
      <p>we do not have a result for you mood and level of energy.. yet!</p>

    {{/if}}

  </div>

  <div class="try-again">
    <button>
      <a class="" href="activities/create">Create</a>
    </button>

    <button>
      <a href="/mood-shaker">Shake again !</a>
    </button>

  </div>

</section>