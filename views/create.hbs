<section class="display">
    <div class="titles">
    <h1>Create your own activity</h1>
    <h2>Personalize your MoodShaker</h2>
  </div>

    <div class="form-register">
        <form class="form-create" action="/activities/create" method="post">

        <label>
        <input  class="title-select" type="text" name="title" placeholder="Title"/>
        </label>

        <label>Mood <br>
        <select class="mood-select" name="mood" multiple>
            <option value="happy">happy</option>
            <option value="procrastinating">procrastinating</option>
            <option value="restless">restless</option>
            <option value="sad">sad</option>
            <option value="creative">creative</option>
            <option value="angry">angry</option>
        </select>
        </label>

        <label>Energy Level <br>
        <select class="energy-select" name="energyLvl">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        </label>

        <label>
        <input class="description-select"type="text" name="description" placeholder="Description" />
        </label>

        <label>Author <br>
    
        <select name="author">
            <option value="{{data._id}}">Myself</option>
        </select>
        </label>


        <button  type="submit">Create new activity!</button>

    </form>
  </div>

  <button class="discover-button" type="submit">
    <a href="javascript:history.back()">Take me back</a>
  </button>

</section>