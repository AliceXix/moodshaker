<section>
  <div>
    <h1>Create your own activity</h1>

  </div>

  <div class="box">
    <h2>Personalize your MoodShaker</h2>
    <form class="user-input" action="/activities/create" method="post">

      <input type="text" name="title" placeholder="Title" />

      <textarea
        type="textarea"
        name="description"
        placeholder="Description"
        rows="4"
        cols="30"
      ></textarea>

     
        <h6>Mood</h6>
        <br />
        <select name="mood" multiple>
          <option value="happy">happy</option>
          <option value="procrastinating">procrastinating</option>
          <option value="restless">restless</option>
          <option value="sad">sad</option>
          <option value="creative">creative</option>
          <option value="angry">angry</option>
        </select>
    

     
        <h6>Energy Level</h6>
        <br />
        <select name="energyLvl">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>



        <h6>Author</h6>
        <br />

        <select name="author">
          <option value="{{data._id}}">Myself</option>
        </select>


  
  </div>

  <div class="button-together">
    <button class="button" type="submit">Create</button>

    <button class="button" type="submit">
      <a href="javascript:history.back()">Take me back</a>
    </button>
  </div>
    </form>

</section>