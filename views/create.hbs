<form action="/activities/create" method="post">
    <label>Title
        <input type="text" name="title"/>
    </label>

    <label>Mood
        <select name="mood" multiple>
            <option value="happy">happy</option>
            <option value="procrastinating">procrastinating</option>
            <option value="restless">restless</option>
            <option value="sad">sad</option>
            <option value="creative">creative</option>
            <option value="angry">angry</option>
        </select>
    </label>


    <label>Energy Level
        <select name="energyLvl">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label>

    <label>Description
        <input type="text" name="description" />
    </label>

    <label>Image
        <input type="image" name="image"/>
    </label>

    <label>Author
        <select name="author">
            <option value="{{data._id}}">Myself</option>
        </select>
    </label>
    
    <p>This is the user Id of the current user: {{data._id}}</p>
    <p>Name: {{data.username}}</p>


    <button type="submit">Create new activity!</button>

    
</form>

<a href="javascript:history.back()">Take me back</a>