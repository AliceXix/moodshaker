<section class="display">
  <h1 class="titre-question">About today</h1>

  <section class="questions">
    <form class="main-form" action="/mood-giver" method="get">

      <div class="container">
        <h2>What is your mood ?</h2>
        <br />
        <div class="moods">

          <div class="happy">
            <h3>&#128512</h3><h4>Happy</h4><br />
            <input
              class="vignettes"
              type="checkbox"
              name="mood"
              value="happy"
            />
          </div>

          <div class="sad">
            <h3>&#128533</h3><h4>Sad</h4><br />
            <input class="vignettes" type="checkbox" name="mood" value="sad" />
          </div>

          <div class="creative">
            <h3>&#129321</h3><h4>Creative</h4><br />
            <input
              class="vignettes"
              type="checkbox"
              name="mood"
              value="creative"
            />
          </div>

          <div class="procrastinating">
            <h3>&#128579</h3><h4>Procrastinating</h4><br />
            <input
              class="vignettes"
              type="checkbox"
              name="mood"
              value="procrastinating"
            />
          </div>

          <div class="angry">
            <h3>&#128544</h3><h4>Angry</h4><br />
            <input
              class="vignettes"
              type="checkbox"
              name="mood"
              value="angry"
            />
          </div>

          <div class="restless">
            <h3>&#129322</h3><h4>Restless</h4><br />
            <input
              class="vignettes"
              type="checkbox"
              name="mood"
              value="restless"
            />

          </div>

        </div>

      </div>

      <br />
      <label>
        <h2>What is your energy level ?</h2>
        <br />
        <div class="energy">
          <div class="energy0">
            <input type="radio" name="energyLvl" value="0" />0
          </div>
          <div class="energy1">
            <input type="radio" name="energyLvl" value="1" />1
          </div>
          <div class="energy2">
            <input type="radio" name="energyLvl" value="2" />2
          </div>
          <div class="energy3">
            <input type="radio" name="energyLvl" value="3" />3
          </div>
          <div class="energy4">
            <input type="radio" name="energyLvl" value="4" />4
          </div>
          <div class="energy5">
            <input type="radio" name="energyLvl" value="5" />5
          </div>

        </div>

      </label>
      <br />

      <button class="submit-button" type="submit">Submit
        {{! <a href="/activities">Shake my mood!</a> }}
      </button>

    </form>
  </section>

</section>